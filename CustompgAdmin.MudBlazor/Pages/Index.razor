@page "/"
@using CustompgAdmin.MudBlazor.Dtos.Connection;
@using global::MudBlazor;
@using System.Net.Http.Json;
<PageTitle>Servers</PageTitle>



@inject HttpClient httpClient

<MudTable Items="@Elements.Take(3)" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@_loading" LoadingProgressColor="Color.Info">
    <HeaderContent>
      
       
        <MudTh>Name</MudTh>
       
        <MudTh>Fuctions</MudTh>
    </HeaderContent>
    <RowTemplate>
     
       
        <MudTd DataLabel="Name">@context.Name</MudTd>
       
        <MudTd DataLabel="Fuctions">Connect</MudTd>
    </RowTemplate>
</MudTable>


@code {
    private bool _hidePosition;
    private bool _loading;
    private IEnumerable<ConnectionDto> Elements = new List<ConnectionDto>();

    protected override async Task OnInitializedAsync()
    {
        Elements = await httpClient.GetFromJsonAsync<List<ConnectionDto>>("/api/Connections");
    }

}